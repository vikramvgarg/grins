# Mesh related options
[Mesh]
   [./Generation]
      dimension = '2'
      element_type = 'QUAD9'
      n_elems_x = '100'
      n_elems_y = '50'
      x_max = '5.0'
[]


# Options for tiem solvers
[unsteady-solver]
transient = false 

#Meshing options
[MeshAdaptivity]
mesh_adaptive = 'true'
absolute_global_tolerance = '1.0e-2'
estimator_type = 'adjoint_residual'
max_refinement_steps = '1'

#Linear and nonlinear solver options
[linear-nonlinear-solver]
max_nonlinear_iterations = 10 
max_linear_iterations = 2500

initial_linear_tolerance = 1.0e-12

#verify_analytic_jacobians = 1.e-6
use_numerical_jacobians_only = 'true'
# Visualization options
[vis-options]
output_vis = 'true'
output_adjoint = 'true'
vis_output_file_prefix = couette_poiseuille 
output_format = 'ExodusII'

# Options for print info to the screen
[screen-options]
print_equation_system_info = 'true' 
print_mesh_info = 'true'
print_log_info = 'true'
solver_verbose = 'true' 
solver_quiet = 'false'

echo_physics = 'true'
echo_qoi = 'true' # which QoIs activated
print_qoi = 'true' # print numerical values of QoIs

# Options related to all Physics
[Physics]

enabled_physics = 'IncompressibleNavierStokes IncompressibleNavierStokesSPGSMStabilization'

# Options for Incompressible Navier-Stokes physics
[./IncompressibleNavierStokes]

FE_family = LAGRANGE
V_order = FIRST
P_order = FIRST

rho = 1.0
mu = 1.0

bc_ids = '1 3 2 0'
bc_types = 'general_velocity general_velocity no_slip no_slip'

pin_pressure = true
pin_value = 100.0
pin_location = '2.5 0.5'

[../VariableNames]

u_velocity = 'u'
v_velocity = 'v'
w_velocity = 'w'
pressure = 'p'

# Options for adaptivity
[QoI]
enabled_qois = 'parsed_interior'
[./ParsedInterior]
qoi_functional = 'u'

[]
